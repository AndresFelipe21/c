#include <stdio.h>

int main()
{
    int arr[50];
    int n,i ;
    
    printf("Enter the size of array:n");
    scanf("%d", &n);
    
    printf("Enter the elements of array:n");
    
    for(i=0;i<n;i++)
    
    {
        scanf("%d",&arr[i]);
    }
    
    return 0;
}

Ejemplo 2:
int main()
{
    int arr[50];
    int n,i ;
    
    printf("Enter the size of array:n");
    scanf("%d", &n);
    
    printf("Enter the elements of array:n");
    
    for(i=0;i<n;i++)
    
    {
        printf("Enter the value para la %d posicion\n", i+1);
        scanf("%d",&arr[i]);
    }
    
        printf("Los valores del arreglo son: \n");
        for(i=0;i<n;i++)
        {
           printf("%d\n",arr[i]); 
        }
        
    return 0;
}
